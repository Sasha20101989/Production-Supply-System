{
  "AppConfig": {
    "UserFileName": "User.json",
    "configurationsFolder": "Production_Supply_System\\Configurations",
    "appPropertiesFileName": "AppProperties.json"
  },
  "connectionStrings": {
    "Default": "Data Source=RU-NMGR-S0053;Initial Catalog=PSS;Integrated Security=True;Encrypt=False"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "extensions": [
      { "assembly": "NLog.Extensions.Logging" }
    ],
    "targets": {
      "database": {
        "type": "Database",
        "dbProvider": "Microsoft.Data.SqlClient.SqlConnection, Microsoft.Data.SqlClient",
        "connectionString": "Data Source=RU-NMGR-S0053;Initial Catalog=PSS;Integrated Security=True;Encrypt=False",
        "commandType": "StoredProcedure",
        "commandText": "[dbo].[usp_Insert_Log]",
        "parameters": [
          {
            "name": "@machineName",
            "layout": "${machinename}"
          },
          {
            "name": "@logged",
            "layout": "${date}"
          },
          {
            "name": "@level",
            "layout": "${level}"
          },
          {
            "name": "@logger",
            "layout": "${logger}"
          },
          {
            "name": "@domainUser",
            "layout": "${environment-user:userName=true:domain=true}"
          },
          {
            "name": "@message",
            "layout": "${message}"
          }
        ]
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "database"
      }
    ]
  }
}
